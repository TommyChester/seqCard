<p id="notice"><%= notice %></p>

<p>
  <strong>Limit:</strong>
  <%= @card.limit %>
</p>

<p>
  <strong>Balance:</strong>
  <%= @card.balance %>
</p>


<table>
  <thead>
    <tr>
      <th>Value of Charge</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @card.charges.each do |charge| %>
      <tr>
        <td><%= charge.value.nil? ? "0.0" : charge.value %></td>   
        <td><%= charge.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Charge', new_charge_path %>

<%= link_to 'Edit', edit_card_path(@card) %> |
<%= link_to 'Back', cards_path %>
