<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Limit</th>
      <th>Balanace</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.limit %></td>
        <td><%= card.balance %></td>
